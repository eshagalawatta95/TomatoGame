@model List<TomatoGame.Web.Models.ScoreViewModel>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


@{
    ViewBag.Title = "Score";
    int rank = 1;
}
<body class="score-body">
    <h2 style=" text-align: center;">Scores</h2>

    <div id="score-div" style="width: 100%; display: flex; justify-content: center; margin-top: 5%;">
        <!-- Flexbox to center child -->
        <div class="half-page">
            @if (Model.Count == 0)
            {
                <h5>No any scores</h5>
            }
            else
            {
                <table id="scoreTbl" class="table">
                    <thead>
                        <tr>
                            <th width="20px">Rank</th>
                            <th width="120px">Name</th>
                            <th width="50px">Mode</th>
                            <th width="50px">Score</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@rank</td>
                                <td>@item.UserName</td>
                                <td>@item.Mode</td>
                                <td>@item.LatestScore</td>
                                <td>@item.UpdatedDate</td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <button class="scoreHomeButton" id="homeButton"><i class="fas fa-home"></i> Home</button>
    </body>

    @section Scripts {
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    <script src="~/Scripts/score.js"></script>
